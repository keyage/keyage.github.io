{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "printWidth": 80,
  "endOfLine": "lf",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "proseWrap": "preserve",
  "insertFinalNewline": true,
  "ignorePatterns": [
    "**/*.log",
    "**/.DS_Store",
    "**/*.",
    ".vscode/settings.json",
    "**/.history",
    "**/.yarn",
    "**/bazel-*",
    "**/bazel-bin",
    "**/bazel-out",
    "**/bazel-qwik",
    "**/bazel-testlogs",
    "**/dist",
    "**/dist-dev",
    "**/lib",
    "**/lib-types",
    "**/etc",
    "**/external",
    "**/node_modules",
    "**/temp",
    "**/tsc-out",
    "**/tsdoc-metadata.json",
    "**/target",
    "**/output",
    "**/rollup.config.js",
    "**/build",
    "**/.cache",
    "**/.vscode",
    "**/.rollup.cache",
    "**/dist",
    "**/tsconfig.tsbuildinfo",
    "**/vite.config.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "**/.netlify",
    "**/pnpm-lock.yaml",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/server",
    ".oxlintrc.json",
    ".oxfmtrc.json"
  ]
}
